// tsconfig.build.json - Dedicated config for building the backend (tsc -b / Docker)
{
  "extends": "./tsconfig.json", // Inherit common settings
  "compilerOptions": {
    "composite": true,          // Required for project references (tsc -b)
    // "rootDir": "..",         // REMOVED - Let tsc infer from includes relative to this file
    // baseUrl and paths are removed to rely on standard Node resolution for build
  },
  // Include patterns relative to this tsconfig file (backend/)
  "include": [
    "src/**/*",               // Include backend source relative to backend/
    "../src/types/**/*"       // Include shared types relative to backend/
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist" // Exclude the output directory
  ]
}
