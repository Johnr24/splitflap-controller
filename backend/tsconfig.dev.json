{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "baseUrl": ".",
    "paths": {
      "types": ["../src/types/index"],
      "types/*": ["../src/types/*"]
    },
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "../src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}
